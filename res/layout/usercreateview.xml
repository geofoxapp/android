<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/uc_wrapper"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/titleBackground">
	<LinearLayout android:id="@+id/uc_wrapper"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical" android:padding="2px" android:background="@color/titleBackground">
		<TextView android:id="@+id/uc_lemail" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Email">
		</TextView>
		<EditText android:id="@+id/uc_email" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="18sp">
		</EditText>
		<TextView android:id="@+id/uc_lpassword"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="Password">
		</TextView>
		<EditText android:id="@+id/uc_password" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="18sp"
			android:password="true">
		</EditText>
		<TextView android:id="@+id/uc_lfname" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="First name">
		</TextView>
		<EditText android:id="@+id/uc_fname" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="18sp">
		</EditText>
		<TextView android:id="@+id/uc_llname" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Last name">
		</TextView>
		<EditText android:id="@+id/uc_lname" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="18sp">
		</EditText>
		<TextView android:id="@+id/uc_lphone" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Phone number">
		</TextView>
		<EditText android:id="@+id/uc_phone" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="18sp"
			android:phoneNumber="true">
		</EditText>
	</LinearLayout>
</ScrollView>